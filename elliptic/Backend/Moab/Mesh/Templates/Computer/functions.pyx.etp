
cdef double get_field(Core* mb, EntityHandle ent, char* field_name):
    cdef Tag tag_handle
    cdef double data

    mb.tag_get_handle(field_name, tag_handle)
    mb.tag_get_data(tag_handle, &ent, 1, <void*> &data)

    return data

cdef double put_scalar(Core* mb, EntityHandle ent, double value):
    return value